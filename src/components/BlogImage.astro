---
type Props = {
  src: string;
  alt?: string;
  width?: number;
  height?: number;
  credit?: string;
  caption?: string;
};

const { src, alt, width = 600, height = 450, credit, caption } = Astro.props;
---

<figure class="blog-image">
  <img src={src} alt={alt} width={width} height={height} />
  {credit && <small class="credit">出典: {credit}</small>}
  {caption && <figcaption class="caption">{caption}</figcaption>}
</figure>

<style>
  .blog-image {
    text-align: center;
    margin: 1em 0;
  }
  .blog-image img {
    display: block;
    max-width: 100%;
    height: auto;
    margin: 0 auto;
    border-radius: 0%;
  }
  .credit {
    display: block;
    font-size: 0.6em;
    color: #777;
    text-align: center;
    margin-top: 0.25em;
  }
  .caption {
    font-size: 0.75em;
    color: #f90;
    text-align: center;
    margin-top: 0.5em;
    line-height: 1.4;
  }
</style>
