---
interface Props {
  date: Date | string;
}

const { date } = Astro.props;
const parsedDate = typeof date === 'string' ? new Date(date) : date;
---

<time datetime={parsedDate.toISOString()}>
  {
    parsedDate.toLocaleDateString('ja-JP', {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
    })
  }
</time>
