---
import type { BlogTag } from '../library/microcms';

type Props = {
  tags: BlogTag[] | undefined;
};

const { tags } = Astro.props;
console.log(tags);
---

{
  tags && (
    <div class="tags">
      {tags.map((tag) => (
        <span class="tag">{tag.name}</span>
      ))}
    </div>
  )
}
<style>
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1rem;
  }
  .tag {
    background-color: rgb(var(--gray-light));
    color: rgb(var(--gray-dark));
    padding: 0.3em 0.6em;
    border-radius: 8px;
    font-size: 0.875rem;
  }
</style>
