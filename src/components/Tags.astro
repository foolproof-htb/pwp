---
import type { CollectionEntry } from 'astro:content';

type Props = {
  tags: CollectionEntry<'post'>['data']['tags'];
};

const { tags } = Astro.props;
---

<div class="tags">
  {tags.map((tag) => <span class="tag">{tag}</span>)}
</div>
<style>
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1rem;
  }
  .tag {
    background-color: rgb(var(--gray-light));
    color: rgb(var(--gray-dark));
    padding: 0.3em 0.6em;
    border-radius: 8px;
    font-size: 0.875rem;
  }
</style>
