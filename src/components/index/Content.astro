---
import HeroImage from '../HeroImage.astro';
import FormattedDate from '../FormattedDate.astro';
import Tags from '../Tags.astro';
import type { Blog } from '../../library/microcms';

type Props = {
  content: Blog;
};

const { content } = Astro.props;
const publishedDate = new Date(content.publishedAt ?? content.createdAt);
---

<a href={content.id}>
  <div class="post-row">
    <div class="thumbnail">
      <HeroImage heroImage={content.heroImage} />
    </div>

    <div class="content">
      <p class="date">
        <FormattedDate date={publishedDate} />
      </p>
      <h3 class="title">{content.title}</h3>
      <Tags tags={content.tags} />
    </div>
  </div>
</a>

<style>
  .post-row {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 2em;
  }
  .thumbnail {
    flex-shrink: 0;
    width: 160px;
    aspect-ratio: 3 / 2;
    border-radius: 12px;
    box-shadow: var(--box-shadow);
    overflow: hidden;
    transition: box-shadow 0.3s ease;
  }
  .thumbnail-image {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .post-row .content {
    display: flex;
    flex-direction: column;
    text-align: left;
  }
  .title {
    margin: 0;
    color: rgb(var(--black));
    line-height: 1.2;
    font-size: 1.5rem;
  }
  .date {
    margin: 0;
    color: rgb(var(--gray));
  }
  a {
    text-decoration: none;
  }
  a:hover .title,
  a:hover .date {
    color: rgb(var(--accent));
  }
  a:hover .thumbnail {
    box-shadow: var(--box-shadow);
  }
  @media (max-width: 768px) {
    .post-row {
      gap: 1rem;
    }
    .thumbnail {
      width: 120px;
    }
  }
  @media (max-width: 480px) {
    .post-row {
      gap: 0.75rem;
    }
    .thumbnail {
      width: 96px;
      border-radius: 10px;
    }
    .title {
      font-size: clamp(1.15rem, 5vw, 1.5);
    }
  }
</style>
