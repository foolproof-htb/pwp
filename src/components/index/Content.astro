---
import { Image } from 'astro:assets';
import FormattedDate from '../FormattedDate.astro';
import type { CollectionEntry } from 'astro:content';
import Tags from '../Tags.astro';
import defaultHeroImage from '../../assets/default-hero-image.jpg';

type Props = {
  content: CollectionEntry<'post' | 'impression'>;
};

const { content } = Astro.props;
const baseUrl = content.collection === 'impression' ? 'impression' : 'post';
---

<a href={`/${baseUrl}/${content.id}`}>
  <div class="post-row">
    <div class="thumbnail">
      <Image
        class="thumbnail-image"
        src={content.data.heroImage ?? defaultHeroImage}
        alt=""
        width={320}
        height={213}
        sizes="(max-width: 600px) 96px, 160px"
      />
    </div>

    <div class="content">
      <p class="date">
        <FormattedDate date={content.data.pubDate} />
      </p>
      <h3 class="title">{content.data.title}</h3>
      <Tags tags={content.data.tags} />
    </div>
  </div>
</a>

<style>
  .post-row {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 2em;
  }
  .thumbnail {
    flex-shrink: 0;
    width: 160px;
    aspect-ratio: 3 / 2;
    border-radius: 12px;
    box-shadow: var(--box-shadow);
    overflow: hidden;
    transition: box-shadow 0.3s ease;
  }
  .thumbnail-image {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .post-row .content {
    display: flex;
    flex-direction: column;
    text-align: left;
  }
  .title {
    margin: 0;
    color: rgb(var(--black));
    line-height: 1.2;
    font-size: 1.5rem;
  }
  .date {
    margin: 0;
    color: rgb(var(--gray));
  }
  a {
    text-decoration: none;
  }
  a:hover .title,
  a:hover .date {
    color: rgb(var(--accent));
  }
  a:hover .thumbnail {
    box-shadow: var(--box-shadow);
  }
  @media (max-width: 768px) {
    .post-row {
      gap: 1rem;
    }
    .thumbnail {
      width: 120px;
    }
  }
  @media (max-width: 480px) {
    .post-row {
      gap: 0.75rem;
    }
    .thumbnail {
      width: 96px;
      border-radius: 10px;
    }
    .title {
      font-size: clamp(1.15rem, 5vw, 1.5);
    }
  }
</style>
